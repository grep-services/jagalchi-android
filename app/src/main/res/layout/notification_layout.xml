<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_margin_left"
        android:layout_marginRight="@dimen/notification_action_margin_right">
        <TextView
            android:id="@+id/noti_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/app_description"
            android:textSize="@dimen/notification_title_text_size"/>
        <ImageView
            android:id="@+id/noti_action_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/exit"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/notification_margin_left"
        android:layout_marginRight="@dimen/notification_margin_right">
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_1"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_2"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_3"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_4"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_5"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/notification_grid_divider"
        android:layout_marginLeft="@dimen/notification_margin_left"
        android:layout_marginRight="@dimen/notification_margin_right">

        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_6"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_7"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_8"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_9"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="@dimen/notification_grid_width"
            android:layout_height="@dimen/notification_grid_height"
            android:layout_marginRight="@dimen/notification_grid_divider">
            <ImageView
                android:id="@+id/noti_grid_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/noti_close_10"
                android:layout_width="@dimen/notification_grid_exit_width"
                android:layout_height="@dimen/notification_grid_exit_height"
                android:layout_gravity="right"
                android:scaleType="center"/>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="@dimen/notification_action_margin_right">

        <ImageView
            android:id="@+id/noti_action_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_image"/>

        <ImageView
            android:id="@+id/noti_action_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save_image"/>

    </LinearLayout>

</LinearLayout>